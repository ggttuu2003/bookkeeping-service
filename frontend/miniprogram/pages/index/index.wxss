/* pages/index/index.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 0;
}

/* 头部区域 */
.header {
  background: transparent;
  padding: 40rpx 30rpx 30rpx;
  color: #fff;
}

.welcome {
  font-size: 36rpx;
  font-weight: 500;
  margin-bottom: 30rpx;
  opacity: 0.9;
}

/* 收支概览卡片 */
.summary {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 30rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.summary-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.summary-item:last-child {
  margin-bottom: 0;
}

.summary-item .label {
  font-size: 28rpx;
  opacity: 0.8;
}

.summary-item .amount {
  font-size: 32rpx;
  font-weight: 600;
}

/* 最近交易区域 */
.recent-transactions {
  background: #fff;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  padding: 30rpx 30rpx 20rpx;
}

.transaction-list {
  padding: 0 30rpx;
}

.transaction-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.transaction-item:last-child {
  border-bottom: none;
}

.transaction-info {
  flex: 1;
}

.transaction-category {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.transaction-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 6rpx;
}

.transaction-time {
  font-size: 22rpx;
  color: #ccc;
}

.transaction-amount {
  font-size: 32rpx;
  font-weight: 600;
  margin-left: 20rpx;
}

.transaction-amount.income {
  color: #52c41a;
}

.transaction-amount.expense {
  color: #ff4d4f;
}

.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 40rpx 0;
}

.more {
  text-align: center;
  color: #1890ff;
  font-size: 28rpx;
  padding: 24rpx;
  border-top: 1rpx solid #f5f5f5;
}

/* 快速操作按钮 */
.quick-actions {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 30rpx 40rpx;
}

.action-btn {
  flex: 1;
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx 20rpx;
  text-align: center;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 3rpx 10rpx rgba(0, 0, 0, 0.08);
}

.action-btn image {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 12rpx;
  display: block;
  margin-left: auto;
  margin-right: auto;
}

.action-btn text {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  display: block;
}

/* 使用emoji替代图片的样式 */
.action-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
  display: block;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .header {
    padding: 30rpx 20rpx 20rpx;
  }

  .welcome {
    font-size: 32rpx;
  }

  .summary {
    padding: 24rpx;
  }

  .recent-transactions {
    margin: 16rpx 20rpx;
  }

  .quick-actions {
    padding: 16rpx 20rpx 30rpx;
    gap: 16rpx;
  }
}