.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.stats-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.balance-section {
  text-align: center;
  margin-bottom: 40rpx;
}

.balance-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.balance-amount {
  font-size: 64rpx;
  font-weight: bold;
  color: #333;
}

.income-expense {
  display: flex;
  justify-content: space-around;
}

.income-expense .item {
  text-align: center;
}

.income-expense .label {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.income-expense .amount {
  font-size: 36rpx;
  font-weight: 600;
}

.income-expense .income {
  color: #07C160;
}

.income-expense .expense {
  color: #FA5151;
}

.quick-actions {
  display: flex;
  justify-content: space-around;
  background: white;
  border-radius: 20rpx;
  padding: 40rpx 0;
  margin-bottom: 30rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-item .icon {
  font-size: 48rpx;
  margin-bottom: 15rpx;
}

.action-item text {
  font-size: 24rpx;
  color: #666;
}

.recent-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-header .title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.section-header .more {
  font-size: 26rpx;
  color: #007AFF;
}

.transaction-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.transaction-item .left {
  display: flex;
  align-items: center;
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f8f8f8;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-right: 20rpx;
}

.info {
  display: flex;
  flex-direction: column;
}

.description {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.date {
  font-size: 24rpx;
  color: #999;
}

.amount {
  font-size: 32rpx;
  font-weight: 600;
}

.amount.income {
  color: #07C160;
}

.amount.expense {
  color: #FA5151;
}