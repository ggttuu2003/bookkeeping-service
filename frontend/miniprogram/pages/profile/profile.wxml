<view class="container">
  <!-- 用户信息卡片 -->
  <view class="user-card">
    <view class="avatar">
      <text class="avatar-emoji">👤</text>
    </view>
    <view class="user-info">
      <view class="username">记账用户</view>
      <view class="user-desc">智能记账，轻松理财</view>
    </view>
  </view>

  <!-- 统计概览 -->
  <view class="stats-card">
    <view class="stats-item">
      <view class="stats-value">{{totalDays || '0'}}</view>
      <view class="stats-label">记账天数</view>
    </view>
    <view class="stats-divider"></view>
    <view class="stats-item">
      <view class="stats-value">{{totalRecords || '0'}}</view>
      <view class="stats-label">总记录数</view>
    </view>
    <view class="stats-divider"></view>
    <view class="stats-item">
      <view class="stats-value">{{totalCategories || '0'}}</view>
      <view class="stats-label">使用分类</view>
    </view>
  </view>

  <!-- 功能菜单 -->
  <view class="menu-section">
    <view class="menu-title">功能设置</view>
    <view class="menu-list">
      <view class="menu-item" bindtap="goToDataManage">
        <view class="menu-icon">📊</view>
        <view class="menu-text">数据管理</view>
        <view class="menu-arrow">></view>
      </view>
      <view class="menu-item" bindtap="goToBackup">
        <view class="menu-icon">☁️</view>
        <view class="menu-text">数据备份</view>
        <view class="menu-arrow">></view>
      </view>
      <view class="menu-item" bindtap="goToSettings">
        <view class="menu-icon">⚙️</view>
        <view class="menu-text">应用设置</view>
        <view class="menu-arrow">></view>
      </view>
    </view>
  </view>

  <!-- 其他功能 -->
  <view class="menu-section">
    <view class="menu-title">其他</view>
    <view class="menu-list">
      <view class="menu-item" bindtap="goToHelp">
        <view class="menu-icon">❓</view>
        <view class="menu-text">帮助与反馈</view>
        <view class="menu-arrow">></view>
      </view>
      <view class="menu-item" bindtap="goToAbout">
        <view class="menu-icon">ℹ️</view>
        <view class="menu-text">关于我们</view>
        <view class="menu-arrow">></view>
      </view>
    </view>
  </view>
</view>