/* pages/transaction/add.wxss */

.container {
  padding: 20rpx;
  background: #fafafa;
  min-height: 100vh;
}

.form-group {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  border: 1rpx solid #f0f0f0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

/* 类型选择器 */
.type-selector {
  display: flex;
  margin: 20rpx;
  background: #f8f9fa;
  border: 1rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 6rpx;
}

.type-btn {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #666;
  transition: all 0.2s ease;
}

.type-btn.active {
  background: #007aff;
  color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.2);
}

/* 表单项 */
.form-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background 0.2s ease;
}

.form-item:hover {
  background: #f8f9fa;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 120rpx;
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.input {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  padding: 0;
  margin: 0;
}

.amount-input {
  text-align: right;
  font-size: 40rpx;
  font-weight: 600;
  color: #007aff;
}

.description-input {
  color: #666;
}

/* 选择器样式 */
.picker {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #333;
  font-size: 32rpx;
}

.category-picker, .payment-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.category-content, .payment-content {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.category-icon, .payment-icon {
  font-size: 36rpx;
}

.category-name, .payment-name {
  font-size: 32rpx;
  color: #333;
}

.date-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.date-text {
  font-size: 32rpx;
  color: #333;
}

.arrow {
  font-size: 28rpx;
  color: #ccc;
  margin-left: 16rpx;
}

/* 按钮区域 */
.btn-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background-color: #fff;
  border-top: 1rpx solid #f0f0f0;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: #007aff;
  color: #fff;
  font-size: 36rpx;
  font-weight: 600;
  border-radius: 12rpx;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(0, 122, 255, 0.3);
  transition: all 0.2s ease;
  position: relative;
  overflow: hidden;
}

.submit-btn:active {
  background: #0056cc;
  transform: scale(0.98);
}

.submit-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  transition: left 0.6s ease;
}

.submit-btn:active::before {
  left: 100%;
}

.submit-btn::after {
  border: none;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .container {
    padding: 16rpx;
  }

  .form-item {
    padding: 20rpx 16rpx;
  }

  .label {
    width: 100rpx;
    font-size: 30rpx;
  }

  .input {
    font-size: 30rpx;
  }

  .amount-input {
    font-size: 36rpx;
  }
}