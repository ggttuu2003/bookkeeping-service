/* pages/statistics/statistics.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding: 20rpx 30rpx;
}

/* 头部日期选择器 */
.header {
  margin-bottom: 30rpx;
}

.date-picker {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 32rpx;
  background: #fff;
  border-radius: 16rpx;
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.arrow {
  margin-left: 12rpx;
  color: #999;
  font-size: 28rpx;
}

/* 汇总卡片 */
.summary-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.summary-item {
  text-align: center;
  flex: 1;
}

.summary-item .label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: block;
}

.summary-item .amount {
  font-size: 36rpx;
  font-weight: 700;
  display: block;
}

.summary-item .amount.income {
  color: #52c41a;
}

.summary-item .amount.expense {
  color: #ff4d4f;
}

.divider {
  width: 1rpx;
  height: 60rpx;
  background: #f0f0f0;
}

/* 标签页 */
.tabs {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  font-weight: 500;
}

.tab.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

/* 图表容器 */
.chart-container {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.chart-section {
  min-height: 400rpx;
}

.chart-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

/* 饼图样式 */
.chart-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.pie-chart {
  position: relative;
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  margin-bottom: 40rpx;
  background: conic-gradient(
    #52c41a 0deg,
    #52c41a var(--income-angle, 0deg),
    #ff4d4f var(--income-angle, 0deg),
    #ff4d4f calc(var(--income-angle, 0deg) + var(--expense-angle, 0deg))
  );
}

.pie-center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: #fff;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.pie-center text:first-child {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.pie-center text:last-child {
  font-size: 24rpx;
  font-weight: 600;
  color: #333;
}

/* 图例 */
.chart-legend {
  display: flex;
  justify-content: center;
  gap: 40rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.legend-color {
  width: 24rpx;
  height: 24rpx;
  border-radius: 4rpx;
}

.legend-color.income {
  background: #52c41a;
}

.legend-color.expense {
  background: #ff4d4f;
}

.legend-text {
  font-size: 26rpx;
  color: #666;
}

/* 分类统计 */
.type-selector {
  display: flex;
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 6rpx;
  margin-bottom: 30rpx;
}

.type-btn {
  flex: 1;
  text-align: center;
  padding: 12rpx 0;
  font-size: 28rpx;
  color: #666;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.type-btn.active {
  background: #1890ff;
  color: #fff;
  font-weight: 500;
}

.category-list {
  space-y: 20rpx;
}

.category-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.category-item:last-child {
  border-bottom: none;
}

.category-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.category-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.category-percent {
  font-size: 26rpx;
  color: #666;
}

.category-bar {
  height: 8rpx;
  background: #f5f5f5;
  border-radius: 4rpx;
  margin-bottom: 8rpx;
  overflow: hidden;
}

.category-progress {
  height: 100%;
  background: linear-gradient(90deg, #1890ff 0%, #40a9ff 100%);
  border-radius: 4rpx;
  transition: width 0.6s ease;
}

.category-amount {
  text-align: right;
  font-size: 24rpx;
  color: #999;
}

/* 趋势图表 */
.trend-chart {
  display: flex;
  height: 300rpx;
  margin-bottom: 30rpx;
}

.trend-y-axis {
  display: flex;
  flex-direction: column-reverse;
  justify-content: space-between;
  width: 80rpx;
  font-size: 22rpx;
  color: #999;
  padding-right: 16rpx;
}

.trend-chart-content {
  flex: 1;
  position: relative;
}

.trend-bars {
  display: flex;
  align-items: flex-end;
  height: 100%;
  gap: 12rpx;
}

.trend-bar-group {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
}

.trend-bar {
  width: 100%;
  margin-bottom: 8rpx;
  border-radius: 4rpx 4rpx 0 0;
  transition: height 0.6s ease;
}

.trend-bar.income {
  background: #52c41a;
}

.trend-bar.expense {
  background: #ff4d4f;
}

.trend-x-label {
  font-size: 22rpx;
  color: #999;
  margin-top: auto;
}

.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 80rpx 0;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .container {
    padding: 16rpx 20rpx;
  }

  .summary-card {
    padding: 30rpx 20rpx;
  }

  .chart-container {
    padding: 24rpx;
  }

  .pie-chart {
    width: 240rpx;
    height: 240rpx;
  }

  .pie-center {
    width: 100rpx;
    height: 100rpx;
  }
}